{
  "name": "@xpbytes/express-async-handler",
  "version": "2.1.0",
  "description": "Utility function to use async functions as express handlers",
  "main": "dist/asyncHandler.js",
  "module": "dist/asyncHandler.js",
  "repository": "https://github.com/XPBytes/express-async-handler",
  "author": "Derk-Jan Karrenbeld <derk-jan@xpbytes.com>",
  "license": "MIT",
  "files": [
    "README.md",
    "LICENSE",
    "/dist"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc",
    "prebuild:test": "rimraf tests/dist",
    "build:test": "tsc --project tests/tsconfig.json",
    "lint": "tslint --project tsconfig.json",
    "pretest": "yarn build:test",
    "test": "tape -r esm tests/dist/**/*.test.js",
    "test:coverage": "yarn nyc --reporter=lcov --reporter=html --reporter=text yarn test",
    "prepublish": "yarn test && yarn lint && yarn build"
  },
  "devDependencies": {
    "@types/supertest": "^2.0.7",
    "@types/tape": "^4.2.33",
    "esm": "^3.2.22",
    "express": "^4.16.4",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "nyc": "^13.3.0",
    "prettier": "^1.16.4",
    "rimraf": "^2.6.3",
    "supertest": "^4.0.2",
    "tape": "^4.10.1",
    "tslint": "^5.14.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.4.2"
  },
  "dependencies": {
    "@types/express": "^4.16.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{json,css,md}": [
        "prettier --single-quote --no-semi --arrow-parens always --write",
        "git add"
      ],
      "*{src,app,__{tests,mocks}__,test,tests}/**/*.{mjs,js,jsx,ts,tsx}": [
        "prettier --single-quote --no-semi --arrow-parens always --write",
        "git add"
      ]
    }
  }
}
